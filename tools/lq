#!/bin/bash

# Simple wrapper script for the Logseq query tool (Updated for reorganized structure)
# Usage: ./lq GRAPH_NAME QUERY_FILE

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the query using npx directly
cd "$SCRIPT_DIR"
npx @logseq/nbb-logseq "../src/clojure/logseq/simple_query.cljs" "$@" 